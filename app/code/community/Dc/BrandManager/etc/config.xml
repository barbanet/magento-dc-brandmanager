<config>
    <modules>
        <Dc_BrandManager>
            <version>0.3.0</version>
        </Dc_BrandManager>
    </modules>
    <adminhtml>
        <translate>
            <modules>
                <brandmanager>
                    <files>
                        <default>Dc_BrandManager.csv</default>
                    </files>
                </brandmanager>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <translate>
            <modules>
                <brandmanager>
                    <files>
                        <default>Dc_BrandManager.csv</default>
                    </files>
                </brandmanager>
            </modules>
        </translate>
    </frontend>
    <global>
        <blocks>
            <brandmanager>
                <class>Dc_BrandManager_Block</class>
            </brandmanager>
            <catalog>
                <rewrite>
                    <navigation>Dc_BrandManager_Block_navigation</navigation>
                </rewrite>
            </catalog>
        </blocks>
        <helpers>
            <brandmanager>
                <class>Dc_BrandManager_Helper</class>
            </brandmanager>
        </helpers>
        <models>
            <brandmanager>
                <class>Dc_BrandManager_Model</class>
                <resourceModel>brandmanager_resource</resourceModel>
            </brandmanager>
        </models>
        <resources>
            <brandmanager_setup>
                <setup>
                    <module>Dc_BrandManager</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </brandmanager_setup>
            <brandmanager_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </brandmanager_write>
            <brandmanager_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </brandmanager_read>
        </resources>
    </global>
    <default>
        <brandmanager>
            <settings>
                <enable>0</enable>
                <list_mode>1</list_mode>
                <brands_per_line>4</brands_per_line>
                <group_by_letter>1</group_by_letter>
            </settings>
        </brandmanager>
    </default>
</config>
